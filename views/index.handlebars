<div class="container">

    <div class="jumbotron">
        <h1>Eat Da Burger</h1>
        <p>Enter and Eat Burgers using sql, express, and node.js</p>
        <h2>Make your burger</h2>

        <form>
            <div class="create-form">
                <div class="form-group">
                <label for="newburger">Add new burger</label>
                <input type="text" name='burger' id="newburger">
                </div>
            <button type="submit" class="btn btn-primary" id="addburger">Submit</button>
            </div>
        </form>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header" id="leftside"><strong>Input Burger</strong></div>
                <div class="card-body">
                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="eatburger btn btn-success" id='eatbutton' data-id='{{this.id}}'
                            data-newDevoured={{devour}}><span class="">EAT</span></button>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header" id="rightside"><strong>Devour burger</strong></div>
                <div class="card-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="trashburger btn btn-danger" id='trashbutton' data-id='{{this.id}}'
                            data-newDevoured={{devour}}><span class="">Finish</span></button>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>

        </div>
    </div>
</div>